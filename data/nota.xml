  <KostenDefinitionen
    xmlns="http://nota.org/schema/misc.xsd">
    <KostenDefinition Id="GP">
      <misc:Name>
        <Lokalisirung Sprache="de">
        Generierungspunkte
      </Lokalisirung>
      </misc:Name>
      <Abkürzung>
        <Lokalisirung Sprache="de">
        GP
      </Lokalisirung>
      </Abkürzung>

      <misc:Beschreibung>
        <Lokalisirung Sprache="de">
        Ein abstraktes Maß zur generierung der Charaktere.
      </Lokalisirung>
      </misc:Beschreibung>
    </KostenDefinition>
    <misc:KostenDefinition Id="Eigenschaften">
      <misc:Name>
        <misc:Lokalisirung Sprache="de">
          <![CDATA[Eigenschaftspunkte]]>
        </misc:Lokalisirung>
      </misc:Name>
      <misc:Abkürzung>
        <misc:Lokalisirung Sprache="de">
          <![CDATA[EiP]]>
        </misc:Lokalisirung>
      </misc:Abkürzung>
      <misc:Beschreibung>
        <misc:Lokalisirung Sprache="de">
          <![CDATA[Die Anzahl an Punkte die in Eigenschaften gesteckt werden kann]]>
        </misc:Lokalisirung>
      </misc:Beschreibung>
    </misc:KostenDefinition>
    <KostenDefinition Id="EP" StandardKosten="true">
      <misc:Name>
        <Lokalisirung Sprache="de">
          Erfahrungspunkte
        </Lokalisirung>
      </misc:Name>
      <Abkürzung>
        <Lokalisirung Sprache="de">
          EP
        </Lokalisirung>
      </Abkürzung>

      <misc:Beschreibung>
        <Lokalisirung Sprache="de">
          Die Erfahrung die ein Charakter bereits gesammelt hat.
        </Lokalisirung>
      </misc:Beschreibung>
    </KostenDefinition>
    <misc:KostenDefinition Id="Kultur">
      <misc:Name>
        <misc:Lokalisirung Sprache="de">Kulturpunkte</misc:Lokalisirung>
      </misc:Name>
      <misc:Abkürzung>
        <misc:Lokalisirung Sprache="de">KuP</misc:Lokalisirung>
      </misc:Abkürzung>
      <misc:Beschreibung>
        <misc:Lokalisirung Sprache="de">
            Das abstrakte maß in wie weit jemand aus einer Kultur lernen konte
          </misc:Lokalisirung>
      </misc:Beschreibung>
    </misc:KostenDefinition>
    <misc:KostenDefinition Id="Proffession">
      <misc:Name>
        <misc:Lokalisirung Sprache="de">Proffessionspunkte</misc:Lokalisirung>
      </misc:Name>
      <misc:Abkürzung>
        <misc:Lokalisirung Sprache="de">PoP</misc:Lokalisirung>
      </misc:Abkürzung>
      <misc:Beschreibung>
        <misc:Lokalisirung Sprache="de">
            Das abstrakte maß in wie weit jemand aus eine Ausbildung oder ähnliches genossen hat.
          </misc:Lokalisirung>
      </misc:Beschreibung>
    </misc:KostenDefinition>
    <misc:KostenDefinition Id="Göttlicher Einfluss" type="epual zero">
      <misc:Name>
        <misc:Lokalisirung Sprache="de">Göttlicher Einfluss</misc:Lokalisirung>
      </misc:Name>
      <misc:Abkürzung>
        <misc:Lokalisirung Sprache="de">GeP</misc:Lokalisirung>
      </misc:Abkürzung>
      <misc:Beschreibung>
        <misc:Lokalisirung Sprache="de">
            Das abstrakte maß wie stark ein Charakter von den Göttern beeinflusst wird.
          </misc:Lokalisirung>
      </misc:Beschreibung>
    </misc:KostenDefinition>
    <misc:KostenDefinition Id="Alter">
      <misc:Name>
        <misc:Lokalisirung Sprache="de">Alterspunkte</misc:Lokalisirung>
      </misc:Name>
      <misc:Abkürzung>
        <misc:Lokalisirung Sprache="de">AlP</misc:Lokalisirung>
      </misc:Abkürzung>
      <misc:Beschreibung>
        <misc:Lokalisirung Sprache="de">
            Das maß in dem jemand gealtert ist, in erster linie kommen mit dem Alter zusätzliche komplikationen
          </misc:Lokalisirung>
      </misc:Beschreibung>
    </misc:KostenDefinition>
    <misc:TalentKostenFunktion KostenArt="EP" ResultType="differenz">
      ceil(KOMPLEXITÄT_NUM * ((1689/80000)  LEVEL ^ 2 + (1888/2000)  LEVEL + (0)  ))
    </misc:TalentKostenFunktion>
  </KostenDefinitionen>
  <GenerierungsDaten
    MinimumVerbreitung="3">
    <misc:Kosten Id="GP" Berechnung="74" />
    <misc:Kosten Id="Eigenschaften" Berechnung="54" />
    <misc:Kosten Id="Göttlicher Einfluss" Berechnung="-1" />
  </GenerierungsDaten>
